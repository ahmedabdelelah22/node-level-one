<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="../img/ali.png" type="image/x-icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Detail page</title>

    <link href="../css/bootstrap.min.css" rel="stylesheet" />
    <link href="../css/dark&light.css" rel="stylesheet" />

 

    <!-- Custom styles for this template -->
    <link href="../css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/myStyle.css" />
  </head>
  <body>
    <%- include('../Components/dark&light.ejs') %>

    
    
    <main class="d-flex flex-nowrap">
      <%- include('../Components/sidebar.ejs',{currentPage :"detail"}) %>

       
      <section class="w-100">
        <div class="container-fluid justify-content-center justify-content-md-between">
          <%- include('../Components/navbar.ejs') %>
          <%- include('../Components/searchStock.ejs') %>
      </div>
         <% if (arrDetail.length === 0) { %>
          <h1 style="text-align: center;"  class=" mt-5  ms-auto me-auto "> no data avalible</h1>
         <% } %>
         <% if (arrDetail.length > 0) { %>
          <table style="width: 99%"
       class="text-center mx-auto table mt-5 table-striped table-bordered"
     >
       <thead>
         <tr>
           <th scope="col">no.</th>
           <th scope="col">client</th>
           <th scope="col">phone </th>
           <th scope="col">total </th>
           

         </tr>
       </thead>
       <tbody>

         <% arrDetail.forEach((item , index) => { %>
           <tr>
             <th scope="row"><%= index+1 %></th>
             <td><%= item.client %>	</td>
             <td><%= item.phone  %>	</td>
          

            
             <td>
               <a
                 data-bs-toggle="tooltip"
                 data-bs-title="View details"
                 data-bs-placement="top"
                 class="btn btn-primary btn-sm"
                 href="/viewDetail/<%= item._id %>"
                 ><i class="bi bi-eye"></i></a>

             <!--   <a
                 data-bs-toggle="tooltip"
                 data-bs-title="Edit user"
                 data-bs-placement="top"
                 class="btn btn-primary btn-sm"
                 href="./edit/<%= item._id %>"
               >
                 <i class="bi bi-pencil"></i>
               </a> --> 
     <form 
     style="display: inline;"
     action="/editDetail/<%= item._id %>?_method=DELETE" method="post">         <button
                 data-bs-toggle="tooltip"
                 data-bs-title="Delete user"
                 data-bs-placement="top"
                 class="btn btn-danger btn-sm"
                 type="submit"
               >
                 <i class="bi bi-trash"></i>
               </button>
             </form>
             </td> </tr> <% }) %> </tbody> </table>
         <% } %>
       
      </section>
    </main>
    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>

    <script src="../js/main.js"></script>
  </body>
</html>
