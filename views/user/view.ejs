<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="../img/ali.png" type="image/x-icon">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Edit page</title>

    <link href="../css/bootstrap.min.css" rel="stylesheet" />
    <link href="../css/dark&light.css" rel="stylesheet" />

   
    <!-- Custom styles for this template -->
    <link href="../css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/myStyle.css" />
  </head>
  <body>
    <%- include('../Components/dark&light.ejs') %>

    <main class="d-flex flex-nowrap">
      <%- include('../Components/sidebar.ejs',{currentPage:"view"}) %>


      <section class="w-100">
        <%- include('../Components/navbar.ejs') %>

        
        </nav>

        <nav
          style="width: 88%"
          class="px-2 mt-4 d-flex flex-wrap justify-content-between"
          aria-label="breadcrumb"
        >
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active " aria-current="page">
              <%= obj.firstName +" "+obj.lastName %>
            </li>
          </ol>

          <p class=" ">
            <span class="fw-medium fs-6">Id :</span> <%= obj._id %>
          </p>
        </nav>
<div>
        <table
          style="width:50% ;"
          class="ms-3 table mt-3 table-sm table-striped table-bordered"
        >
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th class="fw-normal" scope="col"><%= obj.firstName %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">Last Name</th>
              <td><%= obj.lastName %></td>
            </tr>

            <tr>
              <th scope="row">Telephone</th>
              <td><%= obj.phoneNumber %></td>
            </tr>

            <tr>
              <th scope="row">Email</th>
              <td><%= obj.email %></td>
            </tr>
            <tr>
              <th scope="row">Total</th>
              <td><%= obj.totalsum %></td>
            </tr>
            <tr>
              <th scope="row">paid</th>
              <td><%= obj.paid %></td>
            </tr>
            <tr>
              <th scope="row">Rest</th>
              <td><%= obj.rest %></td>
            </tr>

            <tr>
              <th scope="row">Type</th>
              <td><%= obj.type %></td>
            </tr>
            <tr>
              <th scope="row">Address</th>
              <td><%= obj.adress %></td>
            </tr>
            <tr>
              <th scope="row">note</th>
              <td><%= obj.note %></td>
            </tr>

          

            <tr>
              <th scope="row">Created on</th>
              <td><%=moment(obj.createdAt).format("l")  %></td>
            </tr>

            <tr>
              <th scope="row">Last Update</th>
              <td> <%=moment(obj.updatedAt).fromNow()  %></td>
            </tr>
          </tbody>
        </table>
        <div class="col-md-9 ms-3  ">
          <table           style="width: 67%"
          class="table table-sm table-striped table-bordered">
            <thead>
              <tr>
                <th>Description</th>
                <th>code</th>

                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% obj.items.forEach(function(item, index) { %>
                <tr>
                  <td><%= item.name %></td>
                  <td><%= item.code %></td>

                  <td><%= item.price %></td>
                  <td><%= item.quantity %></td>
                  <td><%= item.subtotal %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      </section>
      
    </main>
    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>
    <script src="../js/main.js"></script>
  </body>
</html>
